<Window x:Class="Proyecto_IPO1.Ventana_Usuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_IPO1"
        mc:Ignorable="d"
        Title="Usuario" Height="250" Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Label x:Name="lblUsuario" Content="Usuario: admin" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,117,0,0" />
        <Button x:Name="btnCerrarSesion" Content="Cerrar sesion" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,175,0,0" Click="Button_Click"/>
        <Image x:Name="avatar_user" HorizontalAlignment="Left" Height="100" Margin="150,10,0,0" VerticalAlignment="Top" Width="100" Source="/images/default_avatar.jpg">
        </Image>

    </Grid>
</Window>
