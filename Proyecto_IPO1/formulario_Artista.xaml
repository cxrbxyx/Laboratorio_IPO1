<Window x:Class="Proyecto_IPO1.formulario_Artista"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_IPO1"
        mc:Ignorable="d"
        Title="formulario_Artista" Height="450" Width="800">
    <Grid>
        <TabControl x:Name="tcPestanas">
            <TabItem Header="Ejemplo lista (ListBox)">
                <Grid>
                    <Grid.ColumnDefinitions>
                         <ColumnDefinition Width="217*"/>
                         <ColumnDefinition Width="auto"/>
                         <ColumnDefinition Width="344*"/>
                    </Grid.ColumnDefinitions>
                    <ListBox x:Name="lstListaArtistas" Grid.Column="0" SelectedIndex="0" Margin="5"/>
                        
                    <GridSplitter Grid.Column="1" Width="5"
                        HorizontalAlignment="Stretch" />
                    <StackPanel x:Name="spDetallesArtista" Grid.Column="2" Orientation="Vertical">
                    </StackPanel>
                </Grid>
            </TabItem>
        
            <TabItem Header="Ejemplo tabla (DataGrid)">
                <Grid>
                </Grid>
            </TabItem>
        </TabControl>
    
    </Grid>

</Window>
