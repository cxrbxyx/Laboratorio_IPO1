<Window x:Class="Proyecto_IPO1.Ventana_guardar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_IPO1"
        mc:Ignorable="d"
        Title="Confirmación"
WindowStartupLocation="CenterScreen" Height="300" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="txtContenido" IsReadOnly= "True"
                    TextWrapping="Wrap" Margin = "5"
                    FontSize="14"/>
        <Button x:Name="btnVolver"
                Grid.Row="1"
                Content="Volver"
                FontSize="20" FontWeight="Bold" Height="50" Width="100" VerticalAlignment="Center" HorizontalAlignment="Center" Click="btnVolver_Click" />
    </Grid>
</Window>
