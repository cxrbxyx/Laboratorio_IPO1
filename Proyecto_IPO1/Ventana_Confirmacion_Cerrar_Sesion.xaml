<Window x:Class="Proyecto_IPO1.Ventana_Confirmacion_Cerrar_Sesion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_IPO1"
        mc:Ignorable="d"
        Title="Confirmación" Height="150" Width="300"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="¿Seguro que quiere cerrar sesión?" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="68,10,0,0"/>
        <Button x:Name="btnCancelar" Content="Cancelar" HorizontalAlignment="Left" Margin="55,54,0,0" VerticalAlignment="Top" Click="btnCancelar_Click" Height="46" Width="95"/>
        <Button x:Name="btnConfirmar" Content="Confirmar" HorizontalAlignment="Left" Margin="155,54,0,0" VerticalAlignment="Top" Click="btnConfirmar_Click" Height="46" Width="102"/>

    </Grid>
</Window>
